@{
    ViewBag.Title = "Create/Join Household";
}

<br />
<br />
<div class="col-md-12">
    <div class="col-md-6">
        <div class="panel">
            <div class="panel-heading">
                <div class="col-md-12">
                    <div class="col-md-5">
                        <h4>
                            Join a Household
                        </h4>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <br />
                @using (Html.BeginForm("Join", "Households", FormMethod.Post,
                    new { encType = "multipart/form-data", name = "myform" }))
                {
                    @Html.AntiForgeryToken()
                    
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-4">
                                <label>Your Email Address</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" name="Email" />
                            </div>
                        </div>
                        <div class="row">
                            @ViewBag.Join
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <input type="submit" value="Join" class="btn btn-default" />
                            </div>                               
                        </div> 
                        <br />                           
                    </div>
                }               
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel">
            <div class="panel-heading">
                <div class="col-md-12">
                    <div class="col-md-5">
                        <h4>
                            Create a Household
                        </h4>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <br />
                @using (Html.BeginForm("Create", "Households", FormMethod.Post,
                    new { encType = "multipart/form-data", name = "myform" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-5">
                               <label>Enter Household Name</label>
                            </div>
                            <div class="col-md-6">
                                <input type="text" name="Name" />
                            </div>
                        </div>
                        <div class="row">
                            @ViewBag.Create
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>                           
                        </div>
                        <br />
                    </div>
                }                
            </div>
        </div>
    </div>
</div>
