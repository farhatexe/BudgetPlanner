@model BudgetPlanner.Models.Category

@{
    ViewBag.Title = "Delete Category";
}

<br />
<br />
<div class="col-md-12">
    <div class="col-md-10">
        <div class="panel">
            <div class="panel-heading">
                <div class="col-md-12">
                    <div class="col-md-pull-1">
                        <div class="btn pull-left"><a href="@Url.Action("Index", "Categories")" class="glyphicon glyphicon-hand-left" style="font-size: 16px"> </a></div>
                    </div>
                    <div class="col-md-5">
                        <h4>
                            Are you sure you want to delete this?
                        </h4>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="col-md-12">

                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Household.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Household.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-default" />
                        </div>
                    }
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>
